<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txvTenKH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/vang"
            android:background="@color/den"
            android:text="aa"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txvGtKH"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/den"
            android:textStyle="bold"
            android:background="@color/vang"
            android:text="Nam"
            android:layout_alignParentRight="true"
            android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ngày Sinh"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
            <TextView
                android:id="@+id/txvNgaySinhKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="01/02/1999"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SDT"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
            <TextView
                android:id="@+id/txvSDTKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0321654987"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Đã cắt"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
            <TextView
                android:id="@+id/txvSolancatKH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5 lần"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bd_edt"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>